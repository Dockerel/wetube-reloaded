extends base

block content
    if errorMessage 
            span=errorMessage
    form(method="POST", enctype="multipart/form-data").upload
        div.upload--file
            input(type="text", value="Select File", disabled).file--text.jsFileText
            label(for="image").upload--label
                i.fas.fa-link
        input(type="file", accept="image/*", required, id="image", name="image").upload--btn.jsUploadBtn
        input(type="file", id="avatar", name="avatar", accept="image/*").edit-profile--select.hidden
        div.edit-profile__input
            input(placeholder="Name", name="name", type="text", required, value=loggedInUser.name).edit-profile__inputSelect
            input(placeholder="Email", name="email", type="email", required, value=loggedInUser.email).edit-profile__inputSelect
            input(placeholder="Username", name="username", type="text", required, value=loggedInUser.username).edit-profile__inputSelect
            input(placeholder="Location", name="location", type="text", required, value=loggedInUser.location).edit-profile__inputSelect
        div.change-password
            input(type="submit", value="Update Profile").edit-profile__submit
            if !loggedInUser.socialOnly
                a(href="change-password") Change Password &rarr;