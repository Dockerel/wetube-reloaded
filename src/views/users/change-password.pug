extends ../base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST").upload
        div.edit-profile__input
            input(type="password", placeholder="Old Password", name="oldPassword").edit-profile__inputSelect
            input(type="password", placeholder="New Password", name="newPassword").edit-profile__inputSelect
            input(type="password", placeholder="New Password confirmation", name="newPassswordConfirmation").edit-profile__inputSelect
            input(value="Change Password" type="submit").edit-profile__submit